		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/JYOC_HibernateEmpresa?serverTimezone=UTC</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<mapping class="hibernate_1_1_noincrement_unidir_primarykeyjoin.pojos.Vivienda" />
		<mapping class="hibernate_1_1_noincrement_unidir_primarykeyjoin.pojos.Direccion" />
	</session-factory>

</hibernate-configuration>  